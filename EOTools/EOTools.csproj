      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Translation\EquipmentUpgrade\EquipmentUpgradeView.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Translation\DestinationUpdateForm.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Translation\MapNameTranslation\MapNameTranslation.xaml.cs">
      <SubType>Code</SubType>
