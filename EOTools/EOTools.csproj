    <Compile Update="Translation\TranslationShipForm.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Page Update="RPCTools\RPCManager.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Translation\Equipments\EquipmentManagerView.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
