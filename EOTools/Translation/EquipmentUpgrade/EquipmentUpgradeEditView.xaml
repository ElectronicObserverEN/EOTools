<Window
	x:Class="EOTools.Translation.EquipmentUpgrade.EquipmentUpgradeEditView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:EOTools.Translation.EquipmentUpgrade"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="http://schemas.modernwpf.com/2019"
	d:DataContext="{d:DesignInstance local:EquipmentUpgradeImprovmentViewModel}"
	d:DesignHeight="450"
	d:DesignWidth="800"
	ui:WindowHelper.UseModernWindowStyle="True"
	SizeToContent="WidthAndHeight"
	mc:Ignorable="d">
	<StackPanel>
		<StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Convert to " />
				<Button Command="{Binding OpenEquipmentPickerCommand}" Content="{Binding AfterConversionEquipmentName}" />
				<Button Command="{Binding ClearEquipmentCommand}" Content="Clear" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Level after upgrade" />
				<ui:NumberBox
					Maximum="10"
					Minimum="0"
					Value="{Binding ConversionViewModel.EquipmentLevelAfter}" />
			</StackPanel>

			<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
				<Button
					Margin="5"
					Click="OnConfirmClick"
					Content="Ok" />
				<Button
					Margin="5"
					Click="OnCancelClick"
					Content="Cancel" />
			</StackPanel>
		</StackPanel>
	</StackPanel>
</Window>
