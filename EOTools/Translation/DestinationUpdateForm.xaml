<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EOTools.Translation"
      xmlns:Linq="clr-namespace:Newtonsoft.Json.Linq;assembly=Newtonsoft.Json" x:Class="EOTools.Translation.DestinationUpdateForm"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080
    "
      Title="Destination update">

    <DockPanel>
        <DockPanel LastChildFill="False" Width="185">
            <Button x:Name="buttonSelectFile" Content="Choose file" Click="buttonSelectFile_Click" Width="100" DockPanel.Dock="Top" Height="49"  HorizontalAlignment="Center" Margin="10"/>
            <Button x:Name="buttonUpdate" Content="Update file"  DockPanel.Dock="Top" Height="49" Click="buttonUpdate_Click"  HorizontalAlignment="Center" Margin="10"/>
            <Button x:Name="buttonExport" Content="Save and push to git"  DockPanel.Dock="Top"  Height="49" Click="buttonExport_Click"  HorizontalAlignment="Center" Margin="10"/>
            <Button Content="Open raw" DockPanel.Dock="Top" HorizontalAlignment="Center" Height="49" Margin="10" Click="Button_Click"></Button>
        </DockPanel>
    </DockPanel>
</Page>
