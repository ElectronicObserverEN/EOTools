<Window
	x:Class="EOTools.Tools.ShipPicker.ShipDataPickerView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:EOTools.Tools.ShipPicker"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="http://schemas.modernwpf.com/2019"
	x:Name="ShipPickerControl"
	Title="Pick a ship"
	Width="800"
	Height="450"
	d:DataContext="{d:DesignInstance local:ShipPickerViewModel}"
	ui:WindowHelper.UseModernWindowStyle="True"
	mc:Ignorable="d">

	<Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<TextBox
			Grid.Row="0"
			Width="300"
			HorizontalAlignment="Left"
			Text="{Binding NameFilter}" />

		<DataGrid
			Grid.Row="1"
			AutoGenerateColumns="False"
			IsReadOnly="True"
			ItemsSource="{Binding ShipsFiltered}"
			SelectedItem="{Binding SelectedShip}"
			SelectionMode="Single">

			<DataGrid.InputBindings>
				<MouseBinding Command="{Binding SelectShipCommand}" MouseAction="LeftDoubleClick" />
			</DataGrid.InputBindings>

			<DataGrid.Columns>
				<DataGridTextColumn Binding="{Binding NameEN}" Header="Name" />
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Window>
